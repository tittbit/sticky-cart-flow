{
  "name": "sticky-cart-drawer-shopify-app",
  "version": "1.0.0",
  "description": "A Shopify app for sticky cart drawer with upsells and cross-sells",
  "type": "module",
  "scripts": {
    "build": "remix build",
    "dev": "shopify app dev",
    "config:link": "shopify app config link",
    "generate": "shopify app generate",
    "deploy": "shopify app deploy",
    "config:use": "shopify app config use",
    "env": "shopify app env",
    "log": "shopify app logs",
    "info": "shopify app info",
    "scaffold": "shopify app scaffold",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "shopify": "shopify",
    "typecheck": "tsc --noEmit",
    "start": "remix-serve ./build/server/index.js",
    "docker-start": "npm run setup && npm run start",
    "setup": "prisma generate && prisma migrate deploy"
  },
  "dependencies": {
    "@prisma/client": "^5.19.1",
    "@remix-run/node": "^2.12.0",
    "@remix-run/react": "^2.12.0",
    "@remix-run/serve": "^2.12.0",
    "@shopify/admin-api-client": "^1.0.1",
    "@shopify/app-bridge-react": "^4.1.3",
    "@shopify/cli": "^3.60.0",
    "@shopify/polaris": "^13.9.0",
    "@shopify/shopify-app-remix": "^3.0.2",
    "@shopify/shopify-app-session-storage-prisma": "^5.0.2",
    "isbot": "^4.4.0",
    "prisma": "^5.19.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@remix-run/dev": "^2.12.0",
    "@shopify/app": "^3.60.0",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "eslint": "^8.42.0",
    "typescript": "^5.6.2",
    "vite": "^5.4.8"
  },
  "workspaces": [
    "extensions/*"
  ],
  "trustedDependencies": [
    "@shopify/plugin-cloudflare"
  ],
  "engines": {
    "node": ">=18.20.0"
  }
}
