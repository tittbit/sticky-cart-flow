  "name": "Sticky Cart Loader",
  "target": "head",
  "settings": [
    {
      "type": "paragraph",
      "content": "This loads the Sticky Cart Drawer. No configuration needed - settings are managed in the app dashboard."
    }
  ]
}
{% endschema %}
