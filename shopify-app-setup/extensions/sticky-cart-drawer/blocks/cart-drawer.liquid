{% comment %} App Embed to load Sticky Cart Drawer assets and expose settings {% endcomment %}

{%- comment -%}
Only expose enabled status - all other settings loaded from Supabase database
{%- endcomment -%}
<script>
  window.CART_DRAWER_ENABLED = {{ block.settings.enabled | default: true | json }};
  window.SHOP_DOMAIN = {{ shop.permanent_domain | json }};
</script>

{% schema %}
{
  "name": "Sticky Cart Drawer",
  "target": "body",
  "javascript": "cart-drawer.js",
  "stylesheet": "cart-drawer.css",
  "settings": [
    { 
      "type": "checkbox", 
      "id": "enabled", 
      "label": "Enable Sticky Cart Drawer", 
      "default": true,
      "info": "All settings are configured from the app dashboard. This only enables/disables the cart drawer."
    }
  ]
}
{% endschema %}
